extends ../layout.pug

block content
  #carouselContainer.carousel.slide(data-ride='carousel' data-pause='false' style='margin-top: 0px')
    ol.carousel-indicators
      li.active(data-target="carouselContainer" data-slide-to="0")
      li(data-target="carouselContainer" data-slide-to="1")
      li(data-target="carouselContainer" data-slide-to="2")
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src='/images/main-banner.jpg')
      .carousel-item
        img.d-block.w-100(src='/images/crowd.jpg')
      .carousel-item
        img.d-block.w-100(src='/images/kittens.jpg')
    a.carousel-control-prev(href='#carouselExampleControls' role='button' data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carouselExampleControls' role='button' data-slide='prev')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next
